@model RentAutomation.Models.Tenant

@{
    ViewData["Title"] = "Subsequent EB Calculation";
    var isBillGenerated = ViewBag.IsBillGenerated as bool? ?? false;
}

<h1>Subsequent EB Calculation</h1>

<form asp-action="SubsequentCalculateEB" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="PreviousMonthUnit">Previous Month Unit:</label>
        <input asp-for="PreviousMonthUnit" class="form-control" readonly="@isBillGenerated" />
    </div>

    <div class="form-group">
        <label asp-for="CurrentMonthUnit">Current Month Unit:</label>
        <input asp-for="CurrentMonthUnit" class="form-control" readonly="@isBillGenerated" />
    </div>

    @if (Model.TenantHouseNo == 9)
    {
        <div class="form-group">
            <label asp-for="CurrentMotorReading">Current Motor Reading:</label>
            <input asp-for="CurrentMotorReading" class="form-control" required readonly="@isBillGenerated" />
        </div>

        <div class="form-group">
            <label asp-for="PreviousMotorReading">Previous Motor Reading:</label>
            <input asp-for="PreviousMotorReading" class="form-control" required readonly="@isBillGenerated" />
        </div>
    }

    @if (!isBillGenerated)
    {
        <button type="submit" class="btn btn-primary">Calculate EB</button>
    }

    <a asp-action="Index" asp-route-id="@Model.Id" class="btn btn-secondary">Back to List</a>
</form>

@if (isBillGenerated)
{
    <div class="alert alert-info" role="alert">
        Rent slip has already been generated for this month. Calculations cannot be modified.
    </div>
}
