@model RentAutomation.Models.Tenant

@{
    ViewData["Title"] = "First Time Calculate Motor EB";
}

<h1>First Time Motor EB Calculation</h1>

<form asp-action="CalculateEB" method="post">
    <input type="hidden" name="id" value="@Model.Id" />

    <div class="form-group">
        <label for="currentMonthMotorReading">Current Month Motor Reading</label>
        <input type="number" name="currentMonthMotorReading" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="previousMonthMotorReading">Previous Month Motor Reading</label>
        <input type="number" name="previousMonthMotorReading" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Calculate</button>
</form>
