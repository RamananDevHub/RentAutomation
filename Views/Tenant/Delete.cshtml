@model RentAutomation.Models.Tenant

@{
    ViewData["Title"] = "Delete Tenant";
}

<h1>Delete Tenant</h1>

<h3>Are you sure you want to delete this tenant?</h3>

<div>
    <h4>Tenant Details</h4>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TenantName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TenantName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TenantPhone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TenantPhone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TenantHouseNo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TenantHouseNo)
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
