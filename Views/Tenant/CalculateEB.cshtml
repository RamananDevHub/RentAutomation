@model RentAutomation.Models.Tenant

@{
    ViewData["Title"] = "Calculate EB";
}

<h1>Calculate EB</h1>

<form asp-action="CalculateEB" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <div class="form-group">
        <label for="currentMonthUnit">Current Month Reading:</label>
        <input type="number" class="form-control" id="currentMonthUnit" name="currentMonthUnit" value="@Model.CurrentMonthUnit" required />
    </div>
    <div class="form-group">
        <label for="billingPeriod">Billing Period:</label>
        <input type="date" class="form-control" id="billingPeriod" name="billingPeriod" value="@Model.BillingPeriod.ToString("yyyy-MM-dd")" required />
    </div>
    <button type="submit" class="btn btn-primary">Calculate</button>
</form>

<div>
    <h3>Current Reading: @Model.CurrentMonthUnit</h3>
    <h3>Previous Reading: @Model.PreviousMonthUnit</h3>
    <h3>Units Used: @Model.UnitsUsed</h3>
    <h3>EB Bill: @Model.EbBill</h3>
    <h3>Total Bill: @Model.TotalBill</h3>

    @* Display motor readings if the house number is 9 *@
    @if (Model.TenantHouseNo == 9)
    {
        <h3>Current Motor Reading: @Model.CurrentMotorReading</h3>
        <h3>Previous Motor Reading: @Model.PreviousMotorReading</h3>
    }
</div>
