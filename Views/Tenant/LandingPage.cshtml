@{
    ViewBag.Title = "Rent Automation System";
}

<!-- Include Google Fonts for cursive typography -->
<link href="https://fonts.googleapis.com/css2?family=Dancing+Script&display=swap" rel="stylesheet">

<style>
    /* General Styles */
    body {
        font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif, sans-serif; /* Modern font */
        line-height: 1.6;
        margin: 0;
        padding: 0;
        color: #333;
    }

    /* Hero Section Styles */
    .hero {
        position: relative;
        height: 70vh; /* Increased height for a more impactful image */
        overflow: hidden;
        display: flex;
        align-items: center; /* Center content vertically */
        justify-content: center; /* Center content horizontally */
        color: white; /* Text color for better contrast */
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5); /* Text shadow for legibility */
        padding-bottom: 50px; /* Increased padding to prevent overlap */
    }

        .hero img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            opacity: 0.6; /* Slightly less opacity for better text visibility */
            position: absolute;
            top: 0;
            left: 0;
            z-index: -1;
        }
.hero-text h1 {
    font-family: 'Montserrat', sans-serif;
    font-size: 4rem;
    color: white;
    text-shadow: none;
    margin: 0;
    letter-spacing: 20px;
    overflow: hidden; /* Hide excess text */
    border-right: .15em solid white; /* Type cursor */
    white-space: nowrap;
    animation: typing 3.5s steps(30, end), blink 0.75s step-end infinite;
}

@@keyframes typing {
    from {
        width: 0;
    }
    to {
        width: 100%; /* End with full width */
    }
}

@@keyframes blink {
    from, to {
        border-color: transparent;
    }
    50% {
        border-color: white;
    }
}


    /* Features Section Styles */
    #features {
        position: relative;
        margin-top: 0; /* Overlapping effect */
        padding: 50px 0; /* More padding for a spacious feel */
        background-color: rgba(255, 255, 255, 0.95); /* White background with slight transparency */
        border-radius: 15px; /* Rounded corners for modern look */
        z-index: 1;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1); /* Subtle shadow for depth */
    }

    .feature-card {
        border: 1px solid #007bff; /* Border color */
        border-radius: 10px; /* Rounded corners */
        transition: transform 0.3s, box-shadow 0.3s; /* Smooth transition for hover effect */
        padding: 20px; /* Spacing inside the card */
        margin: 20px; /* Spacing between cards */
        height: 250px; /* Fixed height for consistency */
        display: flex;
        flex-direction: column;
        justify-content: space-between; /* Distribute space between elements */
        align-items: center; /* Center content horizontally */
        background-color: white; /* Card background */
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); /* Subtle shadow for depth */
    }

        .feature-card:hover {
            transform: translateY(-5px); /* Lift effect on hover */
            box-shadow: 0 4px 15px rgba(0, 123, 255, 0.5); /* Shadow on hover */
        }

        .feature-card img {
            max-height: 80px; /* Increased image height for better visibility */
            margin-bottom: 10px; /* Space below the image */
            transition: transform 0.3s; /* Image hover effect */
        }

            .feature-card img:hover {
                transform: scale(1.1); /* Zoom effect on image hover */
            }

        .feature-card h4 {
            font-size: 1.5rem; /* Slightly larger heading */
            margin: 10px 0; /* Spacing above and below the heading */
        }

        .feature-card p {
            font-size: 1rem; /* Larger paragraph font size */
            text-align: center; /* Center text */
        }

    /* About Section Styles */
    #about {
        background-color: #f8f9fa; /* Light grey background */
        padding: 50px 0; /* Spacing for the section */
        text-align: center; /* Centered text */
        border-radius: 15px; /* Rounded corners */
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1); /* Shadow for depth */
    }

    /* Contact Section Styles */
    #contact {
        padding: 50px 0; /* Spacing for the section */
        text-align: center; /* Centered text */
        border-radius: 15px; /* Rounded corners */
    }

    /* Footer Styles */
    footer {
        background-color: #343a40; /* Dark background for footer */
        color: white; /* White text color */
        padding: 20px 0; /* Padding for footer */
    }

    .social-icon {
        margin: 0 10px; /* Spacing between icons */
        color: white; /* Icon color */
        font-size: 1.5rem; /* Icon size */
    }

        .social-icon:hover {
            color: #007bff; /* Change color on hover */
        }
</style>

<main>
    <!-- Hero Section -->
    <section class="hero text-center">
        <img src="~/images/bg.jpg" alt="Hero Background">
        <div class="hero-text">
            <h1>WELCOME</h1>
        </div>
    </section>

    <!-- Features Section -->
    <section id="features" class="py-5">
        <div class="container text-center">
            <h2>Key Features</h2>
            <div class="row">
                <div class="col-md-4">
                    <div class="feature-card">
                        <img src="~/images/a.jpg" alt="Automated Bill Generation" class="img-fluid" />
                        <h4>Automated Bill Generation</h4>
                        <p>Generate bills automatically based on your predefined criteria.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card">
                        <img src="~/images/t.jpg" alt="Tenant Management" class="img-fluid" />
                        <h4>Tenant Management</h4>
                        <p>Manage tenant information and track payments easily.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card">
                        <img src="~/images/u.jpeg" alt="Usage Tracking" class="img-fluid" />
                        <h4>Usage Tracking</h4>
                        <p>Keep track of unit usage and calculate bills accordingly.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer Section -->
    <footer class="text-center">
        <div class="container">
            <p>&copy; 2024 Rent Automation System. All rights reserved.</p>
            <div>
                <a href="#" class="social-icon"><i class="fab fa-facebook"></i></a>
                <a href="#" class="social-icon"><i class="fab fa-x"></i></a>
                <a href="#" class="social-icon"><i class="fab fa-linkedin"></i></a>
            </div>
        </div>
    </footer>
</main>
