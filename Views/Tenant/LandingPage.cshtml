@{
    ViewBag.Title = "Rent Automation System";
}



<main>
    <!-- Hero Section -->
    <section class="hero text-center" style="background-image: url('~/Content/images/rent-bg.jpg'); background-size: cover; padding: 100px 0;">
        <div class="container">
            <h1 class="display-4 text-white">Automate Your Rent Management</h1>
            <p class="lead text-white">Effortless billing and tenant management at your fingertips.</p>
            <a href="#features" class="btn btn-primary btn-lg">Discover Features</a>
        </div>
    </section>

    <!-- Features Section -->
    <section id="features" class="py-5">
        <div class="container text-center">
            <h2>Key Features</h2>
            <div class="row">
                <div class="col-md-4">
                    <img src="~/images/a.jpg" alt="Automated Bill Generation" class="img-fluid mb-3" style="max-height: 150px;" />
                    <h4>Automated Bill Generation</h4>
                    <p>Generate bills automatically based on your predefined criteria.</p>
                </div>
                <div class="col-md-4">
                    <img src="~/images/t.jpg" alt="Tenant Management" class="img-fluid mb-3" style="max-height: 150px;" />
                    <h4>Tenant Management</h4>
                    <p>Manage tenant information and track payments easily.</p>
                </div>
                <div class="col-md-4">
                    <img src="~/images/u.jpeg" alt="Usage Tracking" class="img-fluid mb-3" style="max-height: 150px;" />
                    <h4>Usage Tracking</h4>
                    <p>Keep track of unit usage and calculate bills accordingly.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- About Section -->
    <section id="about" class="bg-light py-5">
        <div class="container text-center">
            <h2>About Us</h2>
            <p>Our mission is to simplify the rental process through automation, making it easier for landlords and tenants to manage their needs.</p>
        </div>
    </section>

    <!-- Contact Section -->
    <section id="contact" class="py-5">
        <div class="container text-center">
            <h2>Contact Us</h2>
            <p>If you have any questions or want to learn more, feel free to reach out!</p>
        </div>
    </section>
</main>

<footer class="text-center py-4">
    <div class="container">
        <p>&copy; 2024 Rent Automation System. All rights reserved.</p>
        <div>
            <a href="#" class="social-icon"><i class="fab fa-facebook"></i></a>
            <a href="#" class="social-icon"><i class="fab fa-twitter"></i></a>
            <a href="#" class="social-icon"><i class="fab fa-linkedin"></i></a>
        </div>
    </div>
</footer>
