@model IEnumerable<RentAutomation.Models.Tenant>

@{
    ViewData["Title"] = "Tenant List";
}

<!-- Header Section -->
<header class="bg-light py-3 mb-4 text-center">
    <img src="~/images/logo.jpg" alt="RentAutomation Logo" style="height: 80px;" />
    <h1 class="display-4 mt-3">Anna Street Tenants</h1>
    <p class="lead">Manage your rental property with ease</p>
</header>

<!-- Action Buttons -->
<div class="mb-4">
    <a asp-action="Create" class="btn btn-primary btn-lg">Create New Tenant</a>
    <a href="@Url.Action("Revenue", "Tenant")" class="btn btn-success btn-lg">View Monthly Revenue</a>
    <a href="@Url.Action("ElectricityUsage", "Tenant")" class="btn btn-info btn-lg">View Monthly Electricity Usage</a>
</div>

<!-- Tenant Table -->
<table class="table table-striped table-hover table-responsive">
    <thead class="bg-light">
        <tr>
            <th>House No</th>
            <th>Name</th>
            <th>Mobile</th>
            <th>Since</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tenant in Model)
        {
            <tr>
                <td>@tenant.TenantHouseNo</td>
                <td>@tenant.TenantName</td>
                <td>@tenant.TenantPhone</td>
                <td>@tenant.TenancyStartDate.ToString("dd MMMM yyyy")</td>
                <td>
                    <!-- Action Buttons -->
                    <div class="btn-group">
                        <a asp-action="Details" asp-route-id="@tenant.Id" class="btn btn-secondary btn-sm">Details</a>
                        <a asp-action="Edit" asp-route-id="@tenant.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="CalculateEB" asp-route-id="@tenant.Id" class="btn btn-info btn-sm">Calculate Rent</a>
                        <a asp-action="ViewHistory" asp-route-id="@tenant.Id" class="btn btn-dark btn-sm">Bill History</a>
                        <a asp-action="ViewBills" asp-route-id="@tenant.Id" class="btn btn-primary btn-sm">View Rent Slip</a>
                        <a asp-action="ResetEB" asp-route-id="@tenant.Id" class="btn btn-secondary btn-sm">Reset</a>
                    </div>
                    <!-- Delete Button -->
                    <form asp-action="Delete" asp-route-id="@tenant.Id" method="post" style="display:inline;">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this tenant?')">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
